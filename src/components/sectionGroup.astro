---
interface Props {
    heading: string;
    showHeader?: boolean;
    headerClass?: string;
}

const { 
    heading, 
    showHeader = true, 
    headerClass = "month-header" 
} = Astro.props;
---

<div class="section-group">
    {showHeader && (
        <p class={headerClass}>{heading}</p>
    )}
    <slot />
</div>