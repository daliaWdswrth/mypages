---
import type { GetStaticPaths } from "astro";
import { getProjects } from "../../lib/projects";
import Entry from "../../components/entry.astro";
import Layout from "../../layouts/layout.astro";

export const getStaticPaths = (async () => {
    const projects = await getProjects({ includeDrafts: true });

    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { entry: project },
    }));
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
---

<Layout title={entry.data.title!}>
    <div class="mb-6 pb-6 border-b border-gray-200">
        <h1 class="text-4xl font-medium mb-3">
            {entry.data.title}
        </h1>


        {entry.data.technologies && entry.data.technologies.length > 0 && (
            <div class="mt-3">
                <div class="flex flex-wrap gap-2">
                    {entry.data.technologies.map((tech) => (
                        <span class="inline-block px-3 py-1 text-sm bg-theme-blue text-gray-800 rounded-full">
                            {tech}
                        </span>
                    ))}
                </div>
            </div>
        )}

        <div class="mt-4 space-x-4">
            {entry.data.github && (
                <a 
                    href={entry.data.github} 
                    target="_blank"
                    class="inline-flex items-center px-4 py-2 bg-theme-cyan text-white rounded-lg hover:bg-gray-800 transition-colors"
                >
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    View on GitHub
                </a>
            )}
            {entry.data.live && (
                <a 
                    href={entry.data.live} 
                    target="_blank"
                    class="inline-flex items-center px-4 py-2 bg-theme-cyan text-white rounded-lg hover:bg-green-700 transition-colors"
                >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    Live Demo
                </a>
            )}
        </div>
    </div>

    <Entry entry={entry} preview={false} />
</Layout>